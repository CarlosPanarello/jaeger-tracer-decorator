{
  "name": "jaeger-tracer-decorator",
  "version": "2.0.0",
  "description": "Decorators for create Jaeger Spans for tracing in node apps",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "debug-js": "node --nolazy --inspect-brk=9229 ./src/examples/example-js/index.js",
    "start-js": "node ./src/examples/example-js/index.js",
    "debug-ts": "node -r dotenv/config --nolazy --inspect-brk=9229 ./dist/examples/example-ts/index.js",
    "start-ts": "node -r dotenv/config ./dist/examples/example-ts/index.js",
    "debug-restify": "node -r dotenv/config --nolazy --inspect-brk=9229 ./dist/examples/example-ts/server.js",
    "start-restify": "node -r dotenv/config ./dist/examples/example-ts/server.js",
    "debug-express": "node --nolazy --inspect-brk=9229 ./src/examples/example-js/server.js",
    "debug-express-ts": "node -r dotenv/config --nolazy --inspect-brk=9229 ./dist/examples/example-ts/server.express.js",
    "start-express": "node ./src/examples/example-js/server.js",
    "tslint": "node_modules/.bin/tslint -c tslint.json --project tsconfig.json",
    "type": "node_modules/.bin/tsc",
    "typew": "node_modules/.bin/tsc -w",
    "clean": "rm -rf ./dist && mkdir dist && echo Clean finished!!!",
    "build-w": "npm run clean && npm install && npm run typew && npm run tslint",
    "build": "npm run clean && npm install && npm run type && npm run tslint && echo Build finished!!!",
    "pack": "npm run build && npm pack && echo Pack finished!!!",
    "pretest": "cp -R ./src/examples/example-js/ ./dist/examples/example-js/",
    "test": "jest"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CarlosPanarello/jaeger-tracer-decorator.git"
  },
  "author": "Carlos E Panarello",
  "license": "MIT",
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "setupFiles": [
      "<rootDir>/.env"
    ],
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "jaeger-client": "^3.13.0",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "23.3.1",
    "@types/jest-cli": "^23.6.0",
    "@types/node": "^10.12.10",
    "@types/restify": "^7.2.6",
    "@types/supertest": "2.0.5",
    "jest": "23.5.0",
    "jest-cli": "^23.5.0",
    "nodemon": "^1.18.6",
    "opentracing": "^0.14.3",
    "restify": "^7.3.0",
    "supertest": "3.1.0",
    "ts-jest": "23.1.3",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "prom-client": "11.1.3",
    "typescript": "^3.2.1"
  }
}
